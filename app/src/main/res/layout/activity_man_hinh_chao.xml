<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:textStyle="italic"
            android:text="Xin chào bạn đến với"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:gravity="right"
            android:textStyle="italic"
            android:paddingRight="30dp"
            android:text="FPOLY MOBIE"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/imgSanPham_frame1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="350dp"
            android:src="@drawable/img_1"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgIcon1_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_sang"/>
            <ImageView
                android:id="@+id/imgIcon2_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_toi"/>
            <ImageView
                android:id="@+id/imgIcon3_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_toi"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#B703A9F4"
            android:textColor="#4E352F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:textStyle="italic"
            android:text="BẮT ĐẦU"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>