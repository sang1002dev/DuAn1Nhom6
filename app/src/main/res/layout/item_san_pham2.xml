<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="15dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7203A9F4"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgSanPham_itemGrid"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/img_6" />
<!--        <TextView-->
<!--            android:id="@+id/tvTenDT"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Iphone 14 Pro Max"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/teal_200"-->
<!--            android:textSize="20dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGiaSanPham_itemGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#FF5722"
                android:text="30000 vnd"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgGioHang_itemGrid"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.5"
                android:src="@drawable/frame4_gio_hang" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>